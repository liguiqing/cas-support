<ehcache>
	<diskStore path="java.io.tmpdir" />
	<cache name="UserCache" maxEntriesLocalHeap="2000"
		eternal="false" timeToIdleSeconds="3600" timeToLiveSeconds="0"
		overflowToDisk="true" statistics="true" memoryStoreEvictionPolicy="LRU">
	</cache>	
	<cache name="ValidOrgsCache" maxEntriesLocalHeap="2000"
		eternal="false" timeToIdleSeconds="3600" timeToLiveSeconds="0"
		overflowToDisk="true" statistics="true" memoryStoreEvictionPolicy="LFU">
	</cache>
	<cache name="TokenCache" maxEntriesLocalHeap="2000"
		   eternal="false" timeToIdleSeconds="3600" timeToLiveSeconds="0"
		   overflowToDisk="false" statistics="true" memoryStoreEvictionPolicy="LFU">
	</cache>
</ehcache>